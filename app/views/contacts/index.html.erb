<% content_for :title, "Contacts" %>

<h1>Contacts</h1>
<h4> <%= current_user.email %> </h4>

<div class="py-3">
<%= link_to "New contact", new_contact_path, class:"btn btn-primary" %>
</div>

<div class="rounded-top overflow-hidden">
  <table class="table table-hover table-bordered">
    <thead class="header">
      <tr>
        <th> Name </th>
        <th> Age </th>
        <th> Email </th>
        <th> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <% contact_name = contact.last_name + ", " + contact.first_name %>
          <td> <%= link_to contact_name, contact %></td>
          <td> <%= contact.age%> </td>
          <td> <%= contact.email%> </td>
          <td>
            <%= link_to "Edit", edit_contact_path(contact) %>
            <%= link_to "Delete", contact, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
